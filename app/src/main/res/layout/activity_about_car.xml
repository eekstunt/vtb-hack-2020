<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".AboutCarActivity">

    <ImageView
        android:id="@+id/aboutCarBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/picture_forest"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageAboutCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/aboutCarBackground"
        app:layout_constraintTop_toBottomOf="@id/buttonAboutCarTryAgain"
        app:srcCompat="@drawable/picture_car_porsche911"
        tools:layout_editor_absoluteX="16dp" />

    <ImageButton
        android:id="@+id/buttonAboutCarTryAgain"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_rounded_no_accent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_try_again" />

    <ImageView
        android:id="@+id/aboutCarDecorations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/textAboutCarName"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/other_decorations" />

    <TextView
        android:id="@+id/textAboutCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:text="Porsche 911"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textAboutCarDescription"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textAboutCarDescription"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="38dp"
        android:gravity="start|top"
        android:lineSpacingExtra="4sp"
        android:padding="0dp"
        android:singleLine="false"
        android:text="Спортивный автомобиль в кузове двухдверное купе или кабриолет на его основе, в разных поколениях производящегося с 1964 года."
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAboutCarFurther"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/aboutCarMoreDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="0dp"
        android:text="Подробнее"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/buttonAboutCarFurther"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_rounded_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icon_further" />

</androidx.constraintlayout.widget.ConstraintLayout>